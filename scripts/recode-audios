#!/bin/bash

set -e

recursive=false
quality=2  # VBR quality (1-5, where 2 is a good default for HE-AAC v2)
trash_dir=""

while [[ $# -gt 0 ]]; do
    case $1 in
        --recursive)
            recursive=true
            shift
            ;;
        --quality)
            quality="$2"
            shift 2
            ;;
        --trashbin)
            trash_dir="$2"
            shift 2
            ;;
        *)
            if [ -z "$directory" ]; then
                directory="$1"
            else
                echo "Error: Multiple directories specified" >&2
                exit 1
            fi
            shift
            ;;
    esac
done

if [ -z "$directory" ]; then
    echo "Usage: $0 [--quality N] [--trashbin DIR] [--recursive] <directory>"
    exit 1
fi

# Expand ~ to $HOME if present
directory="${directory/#\~/$HOME}"
if [ -n "$trash_dir" ]; then
    trash_dir="${trash_dir/#\~/$HOME}"
fi

# Convert to absolute paths
directory="$(realpath "$directory")"
if [ -n "$trash_dir" ]; then
    trash_dir="$(realpath "$trash_dir")"
fi

process_file() {
    local file="$1"
    local quality="$2"
    local trash_dir="$3"
    local directory="$4"

    # Convert filename and extension to lowercase for comparison
    local filename_lower="$(echo "$file" | tr '[:upper:]' '[:lower:]')"
    
    # Skip non-audio files by extension
    if [[ ! "$filename_lower" =~ \.(mp3|wav|wma|ogg|flac|aiff|m4a|aac|opus|ape)$ ]]; then
        echo "Skipping $file (not an audio file by extension)"
        return 0
    fi

    # Skip m4a files (assuming they're already AAC)
    if [[ "$filename_lower" =~ \.(m4a|aac)$ ]]; then
        echo "Skipping $file (already in m4a/aac format)"
        return 0
    fi

    # Build the convert-audio command
    cmd="convert-audio"
    cmd="$cmd --quality $quality"
    if [ -n "$trash_dir" ]; then
        cmd="$cmd --trashbin \"$trash_dir\""
    fi
    cmd="$cmd --basedir \"$directory\""
    cmd="$cmd \"$file\""
    echo "Dispatching conversion job for: $file"
    echo "Debug: echo '$cmd' | mqdish"
    echo "$cmd" | mqdish
}

exit_code=0

# Process files
if [ "$recursive" = true ]; then
    find "$directory" -type f | while read -r file; do
        process_file "$file" "$quality" "$trash_dir" "$directory" || exit_code=1
    done
else
    for file in "$directory"/*; do
        if [ -f "$file" ]; then
            process_file "$file" "$quality" "$trash_dir" "$directory" || exit_code=1
        fi
    done
fi

exit $exit_code 